.foot
    position relative
    display flex
    flex-wrap nowrap
    justify-content space-between
    box-sizing border-box
    width 100%
    padding 80px 30px 76px 30px
    @media tablet-landscape-medium
        flex-direction column-reverse
    @media tablet-portrait
        flex-direction column
        padding 80px 30px 30px 30px
    @media phone
        padding 80px 20px 20px 20px

    &::before
        content ""
        position absolute
        top 0
        left 0
        display block
        width 100%
        height 100%
        background-color lightest-gray
        border-radius 0 0 496px 0
        @media tablet-portrait
            border-radius 0

    &__contacts
        position relative
        width calc(25% - 25px)
        @media laptop
            width calc(25% - 16px)
        @media tablet-landscape-medium
            width 100%

    &__contacts-list
        display flex
        flex-wrap wrap
        padding 0
        margin 18px 0 49px 0 
        list-style none
        @media laptop
            flex-direction column
        @media tablet-landscape-medium
            flex-direction row
        @media phone
            flex-direction column

    &__contacts-item:nth-child(even)
        margin 0 0 0 70px
        @media laptop
            margin 16px 0 0 0
        @media tablet-landscape-medium
            margin 0 0 0 70px
        @media phone
            margin 16px 0 0 0

    &__contacts-hint
        display block
        font-family "Montserrat"
        font-size 15px
        line-height 21px
        font-weight 300
        color text-gray

    &__phone
        font-family "Montserrat"
        font-size 18px
        line-height 24px
        font-weight 600
        color black
        text-decoration none
        outline none

    &__fax
        font-family "Montserrat"
        font-size 18px
        line-height 24px
        font-weight 600
        color black

    &__feedback-button
        margin-top 19px

    &__sitemap
        position relative
        @media tablet-landscape-medium
            margin-bottom 80px
        @media tablet-portrait
            display none

    &__developer
        position absolute
        bottom 30px
        right 30px
        @media tablet-portrait
            position static
            z-index 1
            margin-top 70px

.sitemap
    width calc(70% - 25px)
    @media laptop
        width calc(70% - 16px)
    @media tablet-landscape-medium
        width 100%

    &__container
        display flex
        flex-wrap nowrap
        width calc(100% + 50px)
        margin-left -50px
        @media laptop
            width calc(100% + 32px)
            margin-left -32px

    &__list
        width calc(25% - 150px / 4)
        padding 0
        margin 0 0 0 50px
        list-style none
        @media laptop
            width calc(25% - 96px / 4)
            margin 0 0 0 32px

    &__item
        display block
        width 75%
        font-family "Montserrat"
        font-size 17px
        line-height 23px
        font-weight 600
        color black
        @media desktop-small
            font-size 15px
            line-height 21px
        @media laptop
            width 100%
        @media tablet-landscape-medium
            width 75%

        &--active
            color main-blue
            cursor default

    &__item + &__item
        margin-top 49px

    &__link
        font-family "Montserrat"
        font-size 17px
        line-height 23px
        font-weight 600
        color black
        text-decoration none
        outline none
        border-bottom 1px solid transparent
        transition border .3s 0s ease
        @media desktop-small
            font-size 15px
            line-height 21px

        &:hover
            border-bottom 1px solid black

    &__submenu-list
        margin 20px 0 0 0
        padding 0
        list-style none

    &__submenu-item
        font-family "Montserrat"
        font-size 15px
        line-height 21px
        font-weight 300
        color gray
        @media desktop-small
            font-size 14px
            line-height 20px

        &--active
            color main-blue
            cursor default

    &__submenu-item + &__submenu-item
        margin-top 18px

    &__submenu-link
        font-family "Montserrat"
        font-size 15px
        line-height 21px
        font-weight 300
        color gray
        text-decoration none
        border-bottom 1px solid transparent
        outline none
        transition border .3s 0s ease
        @media desktop-small
            font-size 14px
            line-height 20px

        &:hover
            border-bottom 1px solid gray

.developer
    display flex
    flex-wrap nowrap
    align-items flex-start

    &__link
        font-family "Helvetica"
        font-size 12px
        line-height 15px
        font-weight 800
        color white
        text-transform uppercase
        text-decoration none
        letter-spacing 2px
        padding 3px 4px 3px 6px
        border-radius 3px
        background-color main-blue
        transition background-color .3s 0s ease

        &:hover
            background-color deep-blue

    &__hint
        margin-left 7px
        font-family "helvetica"
        font-size 9px
        line-height 11px
        font-weight 300
        color gray
        text-transform uppercase
        letter-spacing 2px


    

    