.main-slider
    width 100%
    margin-bottom 94px
    border-radius 496px 0 0 0
    overflow hidden
    @media tablet-portrait
        border-radius 0
    @media phone
        margin-bottom 80px

    &__list
        display flex
        flex-wrap nowrap
        padding 0
        margin 0
        list-style none

    &__item
        position relative
        display flex
        justify-content center
        align-items center
        flex-shrink 0
        width 100%
        height 100vh
        background-color black
        overflow hidden

    &__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 100%
        height 100%
        object-fit cover
        opacity .5

    &__text
        position relative
        width 55%
        text-align center
        @media desktop-small
            width 65%
        @media tablet-portrait
            width 75%
        @media phone
            width calc(100% - 40px)

    &__heading
        position relative
        margin 0
        font-family "Montserrat"
        font-size 60px
        line-height 64px
        font-weight 600
        color white
        @media desktop-small
            font-size 48px
            line-height 52px
        @media tablet-landscape-small
            font-size 36px
            line-height 40px
        @media phone
            font-size 24px
            line-height 28px

    &__description
        position relative
        width 75%
        margin 0 auto
        font-family "Montserrat"
        font-size 17px
        line-height 23px
        font-weight 300
        color white
        @media desktop-small
            font-size 15px
            line-height 21px
        @media laptop
            display none

    &__arrows
        position absolute
        bottom 30px
        right 30px
        z-index 1
        display flex
        flex-wrap nowrap
        justify-content space-between
        width 98px
        height 26px
        @media phone
            bottom 20px
            right 20px

        & svg
            fill none
            stroke white
            stroke-width 2px

    &__arrow
        transition opacity .3s 0s ease 
        cursor pointer

        &:hover
            opacity .75

.main-slider__heading + .main-slider__description
    margin-top 30px

.main-slider__description + .main-slider__description
    margin-top 24px

.swiper-slide-active
    & .main-slider__heading
        animation main-slider-heading-fade-in
        animation-duration 2s
        animation-timing-function ease
        animation-iteration-count 1
        animation-direction normal
        animation-fill-mode forwards

    & .main-slider__description
        animation main-slider-description-fade-in
        animation-duration 2s
        animation-timing-function ease
        animation-iteration-count 1
        animation-direction normal
        animation-fill-mode forwards
