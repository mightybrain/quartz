.contacts
    width 100%
    margin-top 32px

    &__info
        width 1050px
        margin 0 auto 100px auto
        @media laptop
            width 856px
        @media tablet-portrait
            width calc(100% - 60px)
        @media phone
            width calc(100% - 40px)
            margin 0 auto 80px auto

    &__list
        margin 0
        padding 0
        list-style none
        column-count 2
        column-gap 50px
        @media laptop
            column-gap 32px
        @media phone
            column-count 1
            column-gap 0

    &__item
        margin-bottom 39px

    &__hint
        display block
        width 100%
        margin-bottom 9px
        font-family "Montserrat"
        font-size 20px
        line-height 24px
        font-weight 600
        color black
        @media desktop-small
            font-size 18px
            line-height 22px

    &__map
        width 100%
        height 540px

.contacts__data
    & p:not([class])
        margin 0
        font-family "Montserrat"
        font-size 17px
        line-height 23px
        font-weight 300
        color black
        @media desktop-small
            font-size 15px
            line-height 21px

    & p:not([class]) + p:not([class]),
    & ol:not([class]) + p:not([class]),
    & ul:not([class]) + p:not([class]) 
        margin-top 24px

    & li:not([class])
        margin 0
        font-family "Montserrat"
        font-size 17px
        line-height 23px
        font-weight 300
        color black
        @media desktop-small
            font-size 15px
            line-height 21px

    & li:not([class]) + li:not([class])
        margin-top 6px

    & ul:not([class]),
    & ol:not([class])
        width calc(100% - 30px)
        margin 0
        padding 0
        list-style none

    & ol:not([class]) + ol:not([class]),
    & p:not([class]) + ol:not([class]),
    & ul:not([class]) + ol:not([class]),
    & ul:not([class]) + ul:not([class]),
    & p:not([class]) + ul:not([class]),
    & ol:not([class]) + ul:not([class])
        margin-top 24px

    & a:not([class])
        display inline
        font-family "Montserrat"
        font-size 17px
        line-height 23px
        font-weight 300
        color main-blue
        text-decoration none
        border-bottom 1px solid main-blue
        outline none
        transition border .3s 0s ease
        @media desktop-small
            font-size 15px
            line-height 21px

        &:hover
            border-bottom 1px solid transparent

.feedback
    padding 100px 0 100px 0
    background-color main-blue
    @media phone
        padding 80px 0 80px 0

    &__container
        width 1050px
        margin 0 auto
        @media laptop
            width 856px
        @media tablet-portrait
            width calc(100% - 60px)
        @media phone
            width calc(100% - 40px)

    &__text
        margin-bottom 64px

    &__heading
        margin-bottom 23px