.head
    position absolute
    top 0
    left 0
    z-index 2
    display flex
    width 100%
    color white

    &__logo
        margin 22px 0 0 30px
        @media tablet-portrait
            margin 22px 0 0 20px
        @media phone
            margin 12px 0 0 10px

    &__aside
        margin 30px 30px 0 auto
        @media tablet-landscape-medium
            position fixed
            top 0
            left 0
            width 100%
            height 100%
            margin 0
            background-color main-blue
            opacity 0
            visibility hidden
            overflow hidden
            transition opacity 1s .5s ease, visibility 0s 1.5s linear

    &__rows
        @media tablet-landscape-medium
            width calc(100% + 17px)
            height 100%
            overflow-y auto
            opacity 0
            visibility hidden
            transition opacity .5s 0s ease, visibility 0s .5s linear
        @media tablet-portrait
            width 100%

    &__row
        display flex
        flex-wrap nowrap
        align-items center
        justify-content flex-end
        @media tablet-landscape-medium
            flex-direction column
            width calc(100% - 60px)
            margin 0 auto
        @media phone
            width calc(100% - 40px)

        &:nth-child(1)
            @media tablet-landscape-medium
                margin-top 100px

        &:nth-last-child(1)
            @media tablet-landscape-medium
                margin-bottom 100px

    &__row + &__row
        margin-top 26px
        @media tablet-landscape-medium
            margin-top 80px

    &__lang-list
        display flex
        flex-wrap nowrap
        margin 0 30px 0 0
        padding 0
        list-style-type none
        @media tablet-landscape-medium
            margin 0 0 30px 0

    &__lang-item + &__lang-item
        margin-left 30px

    &__lang-link
        font-family "Montserrat"
        font-size 15px
        line-height 21px
        font-weight 300
        color inherit
        text-decoration none
        border-bottom 1px solid white
        outline none
        transition border .3s 0s ease

        &:hover
            border-bottom 1px solid transparent

    &__phone
        margin 0 30px 0 0
        font-family "Montserrat"
        font-size 18px
        line-height 22px
        font-weight 500
        color inherit
        text-decoration none
        outline none
        @media tablet-landscape-medium
            margin 0 0 30px 0

    &__feedback-button
        padding 10px 20px 9px 20px
        background none
        background-color main-blue
        border none
        border-radius 19px
        font-family "Montserrat"
        font-size 15px
        line-height 19px
        font-weight 500
        color white
        outline none
        cursor pointer
        transition background-color .3s 0s ease, color .3s 0s ease
        @media tablet-landscape-medium
            background-color white
            color black

        &:hover
            background-color deep-blue
            color white

    &__burger
        display none
        @media tablet-landscape-medium
            display block
            margin 30px 30px 0 auto
        @media phone
            margin 20px 20px 0 auto

.logo
    &__link
        text-decoration none
        outline none

    & svg
        fill main-blue
        @media tablet-portrait
            fill white

.main-nav
    &__list
        display flex
        flex-wrap nowrap
        margin 0
        padding 0
        list-style none
        @media tablet-landscape-medium
            flex-direction column
            align-items center

    &__item
        position relative
        z-index 1
        font-family "Montserrat"
        font-size 15px
        line-height 19px
        font-weight 500
        color inherit
        @media tablet-landscape-medium
            font-size 20px
            line-height 24px
            text-align center

        &--active
            color main-blue
            @media tablet-landscape-medium
                color lightest-blue

            &:hover
                cursor default

    &__item + &__item
        margin-left 30px
        @media tablet-landscape-medium
            margin 50px 0 0 0

    &__link
        position relative
        z-index 1
        font-family "Montserrat"
        font-size 15px
        line-height 19px
        font-weight 500
        color inherit
        text-decoration none
        outline none
        transition opacity .3s 0s ease
        @media tablet-landscape-medium
            font-size 20px
            line-height 24px

        &:hover
            opacity .75     

    &__submenu-list
        position absolute
        top 45px
        left 0
        z-index 0
        max-width 200px
        padding 16px 0
        margin 0
        background-color main-blue
        list-style none
        opacity 0
        visibility hidden
        transition opacity .5s 0s ease, visibility 0s .5s linear
        @media tablet-landscape-medium
            position static
            display flex
            flex-direction column
            align-items center
            max-width none
            text-align center
            background none
            opacity 1
            visibility visible

        &::before
            content ""
            position absolute
            top -30px
            left 0
            display block
            width 100%
            height 30px
            background none
            @media tablet-landscape-medium
                display none

        &--level2
            top 0
            left 100%
            opacity 0
            visibility hidden
            @media tablet-landscape-medium
                opacity 1
                visibility visible

    &__submenu-item
        position relative
        box-sizing border-box
        padding 8px 23px
        font-family "Montserrat"
        font-size 14px
        line-height 20px
        font-weight 300
        color white
        @media tablet-landscape-medium
            font-size 15px
            line-height 19px

        &::before
            content ""
            position absolute
            top 0
            left 0
            z-index -1
            display block
            width 0
            height 100%
            background-color deep-blue
            transition width .5s 0s ease
            @media tablet-landscape-medium
                background none

        &--active
            cursor default

            &::before
                width 100%

    &__submenu-link
        position relative
        display block
        font-family "Montserrat"
        font-size 14px
        line-height 20px
        font-weight 300
        color white
        text-decoration none
        outline none
        @media tablet-landscape-medium
            font-size 15px
            line-height 19px

    &__search-button
        padding 0
        margin 0
        background none
        border none
        outline none
        cursor pointer
        transition opacity .3s 0s ease

        &:hover
            opacity .75

        &::after
            content "Поиск"
            margin-left 7px
            font-family "Montserrat"
            font-size 15px
            line-height 19px
            font-weight 500
            color white
            @media laptop
                display none
            @media tablet-landscape-medium
                display inline
                font-size 20px
                line-height 24px

        & svg 
            fill none 
            stroke white
            stroke-width 2px

.main-nav__submenu-list--level2
    & .main-nav__submenu-item
        @media tablet-landscape-medium
            font-size 12px
            line-height 16px
            color gray-blue

    & .main-nav__submenu-link
        @media tablet-landscape-medium
            font-size 12px
            line-height 16px
            color gray-blue

.main-nav__item:hover > .main-nav__submenu-list,
.main-nav__submenu-item:hover > .main-nav__submenu-list--level2
    opacity 1
    visibility visible
    transition opacity .5s 0s ease, visibility 0s 0s linear

.main-nav__submenu-item:hover
    &::before
        width 100%

.burger
    position relative
    width 30px
    height 22px
    cursor pointer

    &__default
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        overflow hidden

        &::before
            content ""
            position absolute
            top 0
            right 0
            display block
            width 100%
            height 2px
            background-color white
            transition width .7s .8s ease

        &::after
            content ""
            position absolute
            top 20px
            right 0
            display block
            width 100%
            height 2px
            background-color white
            transition width .7s 1s ease

    &__stroke
        position absolute
        right 0
        top 10px
        width 100%
        height 2px
        background-color white
        transition width .7s .9s ease

    &__cross
        position absolute
        top 0
        left 0
        width 100%
        height 100%

        &::before
            content ""
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%) rotate(45deg)
            display block
            width 0
            height 2px
            background-color white
            transition width .7s 0s ease

        &::after
            content ""
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%) rotate(-45deg)
            display block
            width 0
            height 2px
            background-color white
            transition width .7s .1s ease

body.js-burger-menu-is-open
    overflow-y hidden

    & .head__aside
        opacity 1
        visibility visible
        transition opacity 1s 0s ease, visibility 0s 0s linear

    & .head__rows
        opacity 1
        visibility visible
        transition opacity .5s 1s ease, visibility 0s 1s linear

    & .burger__default::before
        width 0
        transition width .7s 0s ease

    & .burger__stroke
        width 0
        transition width .7s .1s ease

    & .burger__default::after
        width 0
        transition width .7s .2s ease

    & .burger__cross::before
        width 100%
        transition width .7s .9s ease

    & .burger__cross::after
        width 100%
        transition width .7s 1s ease





