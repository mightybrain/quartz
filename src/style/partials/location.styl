        transform scale(18)
        @media laptop
            transform translateY(-3%) scale(15)
        @media tablet-portrait
            transform translate(-5%, -3%) scale(15)
    
    & .local-number
        transform scale(18)
        @media laptop
            transform translateY(-3%) scale(15)
        @media tablet-portrait
            transform translate(-5%, -3%) scale(15)

.location__container.js-scale-3
