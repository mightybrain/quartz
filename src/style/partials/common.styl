svg path,
svg line,
svg rect,
svg polygon,
svg circle
    fill inherit !important
    stroke inherit !important
    stroke-width inherit !important

.tabs
    &__list
        display flex
        flex-wrap wrap
        justify-content center
        margin 0
        padding 0
        list-style none
        @media phone
            justify-content flex-start

    &__item
        margin 0 15px 10px 15px
        @media phone
            margin 0 0 10px 0

        &:not(:nth-last-child(1))
            @media phone
                margin-right 30px

    &__button
        display inline
        padding 0
        margin 0
        font-family "Montserrat"
        font-size 17px
        line-height 23px
        font-weight 600
        color black
        background none
        border none
        border-bottom 1px dotted black
        outline none
        transition border .3s 0s ease
        cursor pointer

        &:hover
            border-bottom 1px dotted transparent

        &--active
            color main-blue
            border-bottom 1px dotted transparent
            cursor default

.common
    &__h1-heading
        margin 0
        font-family "Montserrat"
        font-size 48px
        line-height 52px
        font-weight 600
        color black
        @media laptop
            font-size 36px
            line-height 40px
        @media phone
            font-size 24px
            line-height 28px

        &--white
            color white

    &__description
        display block
        margin 0
        font-family "Montserrat"
        font-size 17px
        line-height 23px
        font-weight 300
        color black
        @media desktop-small
            font-size 15px
            line-height 21px

        &--large
            font-size 30px
            line-height 34px
            font-weight 600
            @media desktop-small
                font-size 24px
                line-height 30px
            @media phone
                font-size 20px
                line-height 24px

        &--small
            font-size 15px
            line-height 21px
            @media desktop-small
                font-size 14px
                line-height 20px

        &--white
            color white

    &__description:not(&__description--large):not(&__description--small) + &__description:not(&__description--large):not(&__description--small)
        margin-top 24px

    &__description--large + &__description:not(&__description--large):not(&__description--small)
        margin-top 27px

    &__description:not(&__description--large):not(&__description--small) + &__description--large
        margin-top 29px

    &__description--small + &__description--small
        margin-top 20px

    &__link
        display inline-block
        font-family "Montserrat"
        font-size 17px
        line-height 23px
        font-weight 300
        color black
        text-decoration none
        border-bottom 1px solid black
        transition border .3s 0s ease
        @media desktop-small
            font-size 15px
            line-height 21px

        &--white
            color white
            border-bottom 1px solid white

        &:hover
            border-bottom 1px solid transparent

    &__link-hint
        font-family "Montserrat"
        font-size 17px
        line-height 23px
        font-weight 500
        color gray
        @media desktop-small
            font-size 15px
            line-height 21px

    &__button-link
        padding 0
        background none
        border none
        border-bottom 1px solid black
        font-family "Montserrat"
        font-size 17px
        line-height 23px
        font-weight 500
        color black
        outline none
        cursor pointer
        transition border .3s 0s ease
        @media desktop-small
            font-size 15px
            line-height 21px

        &:hover
            border-bottom 1px solid transparent

    &__button
        padding 10px 20px 9px 20px
        background none
        background-color main-blue
        border none
        border-radius 19px
        font-family "Montserrat"
        font-size 15px
        line-height 19px
        font-weight 500
        color white
        outline none
        cursor pointer
        transition background-color .3s 0s ease, color .3s 0s ease

        &--white
            background-color white
            color black

        &:hover
            background-color deep-blue
            color white

    &__wysiwyg
        width 100%

        & h2:not([class])
            margin 0 0 23px 0
            font-family "Montserrat"
            font-size 48px
            line-height 52px
            font-weight 600
            color black
            @media desktop-small
                font-size 36px
                line-height 40px
            @media tablet-landscape-small
                font-size 30px
                line-height 34px
            @media phone
                font-size 20px
                line-height 24px

        & h3:not([class])
            margin 0 0 26px 0
            font-family "Montserrat"
            font-size 36px
            line-height 40px
            font-weight 600
            color black
            @media desktop-small
                font-size 30px
                line-height 34px
            @media tablet-landscape-small
                font-size 24px
                line-height 28px
            @media phone
                font-size 18px
                line-height 22px

        & p:not([class]) + h2:not([class]),
        & img:not([class]) + h2:not([class]),
        & ul:not([class]) + h2:not([class]),
        & ol:not([class]) + h2:not([class]),
        & div + h2:not([class]),
        & p:not([class]) + h3:not([class]),
        & img:not([class]) + h3:not([class]),
        & ul:not([class]) + h3:not([class]),
        & ol:not([class]) + h3:not([class]),
        & div + h3:not([class])
            margin-top 67px

        & p:not([class])
            margin 0
            font-family "Montserrat"
            font-size 17px
            line-height 23px
            font-weight 300
            color black
            @media desktop-small
                font-size 15px
                line-height 21px

        & p:not([class]) + p:not([class]),
        & img:not([class]) + p:not([class]),
        & ol:not([class]) + p:not([class]),
        & ul:not([class]) + p:not([class]),
        & div + p:not([class])      
            margin-top 24px

        & li:not([class])
            position relative
            left 30px
            margin 0
            font-family "Montserrat"
            font-size 17px
            line-height 23px
            font-weight 300
            color black
            @media desktop-small
                font-size 15px
                line-height 21px

        & li:not([class]) + li:not([class])
            margin-top 6px

        & ul:not([class])
            width calc(100% - 30px)
            margin 0
            padding 0
            list-style none

            & li:not([class])::before
                content ""
                position absolute
                top 11px
                left -30px
                display block
                width 20px
                height 1px
                background-color main-blue

        & ol:not([class])
            width calc(100% - 30px)
            margin 0
            padding 0
            list-style none
            counter-reset default

            & li:not([class])
                counter-increment counter 

            & li:not([class])::before
                content counter(counter)"."
                position absolute
                top 0px
                left -30px
                font-family "Montserrat"
                font-size 17px
                line-height 23px
                font-weight 300
                color main-blue
                @media desktop-small
                    font-size 15px
                    line-height 21px

        & ol:not([class]) + ol:not([class]),
        & p:not([class]) + ol:not([class]),
        & img:not([class]) + ol:not([class]),
        & ul:not([class]) + ol:not([class]),
        & div + ol:not([class]),
        & ul:not([class]) + ul:not([class]),
        & p:not([class]) + ul:not([class]),
        & img:not([class]) + ul:not([class]),
        & ol:not([class]) + ul:not([class]),
        & div + ul:not([class])
            margin-top 24px

        & img:not([class])
            display block
            max-width 100%
            margin 0

        & img:not([class]) + img:not([class])
            margin-top 10px
        
        & p:not([class]) + img:not([class]),
        & ul:not([class]) + img:not([class]),
        & ol:not([class]) + img:not([class]),
        & div + img:not([class])
            margin-top 34px

        & a:not([class])
            display inline
            font-family "Montserrat"
            font-size 17px
            line-height 23px
            font-weight 300
            color main-blue
            text-decoration none
            border-bottom 1px solid main-blue
            outline none
            transition border .3s 0s ease
            @media desktop-small
                font-size 15px
                line-height 21px

            &:hover
                border-bottom 1px solid transparent

        & table:not([class])
            border 2px solid light-gray
            border-collapse collapse

            & tr:not(:nth-last-child(1))
                    border-bottom 1px solid light-gray

            & th
                box-sizing border-box
                max-width 200px
                padding 9px 20px 7px 20px
                font-family "Montserrat"
                font-size 17px
                line-height 23px
                font-weight 600
                color black
                text-align left
                vertical-align top
                @media desktop-small
                    font-size 15px
                    line-height 21px

                &:not(:nth-last-child(1))
                    border-right 1px solid light-gray

            & td
                box-sizing border-box
                max-width 200px
                padding 10px 20px 9px 20px
                font-family "Montserrat"
                font-size 17px
                line-height 23px
                font-weight 300
                color black
                vertical-align top
                @media desktop-small
                    font-size 15px
                    line-height 21px

                &:not(:nth-last-child(1))
                    border-right 1px solid light-gray
                    transition border .3s 0s ease

        & p:not([class]) + div,
        & ul:not([class]) + div,
        & ol:not([class]) + div,
        & div + div
            margin-top 34px

    &__table-wrapper
        width 100%
        overflow hidden

    &__table-scroller
        overflow-x auto

.common__description:not(.common__description--large) a
    display inline
    font-family "Montserrat"
    font-size 17px
    line-height 23px
    font-weight 300
    color black
    text-decoration none
    border-bottom 1px solid black
    transition border .3s 0s ease
    @media desktop-small
        font-size 15px
        line-height 21px

    &:hover
        border-bottom 1px solid transparent

.common__description--white:not(.common__description--large) a
    color white
    border-bottom 1px solid white

